/**point-select.wxss**/

/* 页面基础样式 */
.page {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 50%, #FFB5B5 100%);
}

.scrollarea {
  width: 100%;
  height: 100vh;
}

.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 50%, #FFB5B5 100%);
  padding: 40rpx 0 80rpx 0;
  box-sizing: border-box;
}

/* 搜索区域 */
.search-section {
  width: 90%;
  margin: 0 auto 40rpx auto;
  position: relative;
  top: -20rpx;
}

.search-box {
  position: relative;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 24rpx 60rpx 24rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  border: none;
  outline: none;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  font-size: 32rpx;
  color: #999;
}

/* 地点列表区域 */
.point-list-section {
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  position: relative;
  top: -10rpx;
  min-height: 800rpx;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  flex-wrap: wrap;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab-item {
  padding: 16rpx 24rpx;
  margin: 0 16rpx 16rpx 0;
  background-color: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  text-align: center;
}

.tab-item.active {
  background-color: #FF6B6B;
  border-color: #FF6B6B;
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #fff;
}

/* 地点容器 */
.points-container {
  height: 600rpx;
  padding: 20rpx 0;
}

/* 地点项 */
.point-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.point-item:last-child {
  border-bottom: none;
}

.point-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.point-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.point-category {
  font-size: 24rpx;
  color: #999;
}

.point-select {
  padding: 16rpx 32rpx;
  background-color: #FF6B6B;
  border-radius: 40rpx;
}

.select-text {
  font-size: 28rpx;
  color: #fff;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 悬停效果 */
.point-item-hover {
  background-color: #f5f5f5;
} 