/**index.wxss**/
.page {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.scrollarea {
  width: 100%;
  height: 100vh;
}

.container {
  width: 100%;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.placeholder-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
} 