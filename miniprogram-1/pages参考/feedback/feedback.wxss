/**feedback.wxss**/

/* 页面基础样式 */
.page {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 50%, #FFB5B5 100%);
}

.scrollarea {
  width: 100%;
  height: 100vh;
}

.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 50%, #FFB5B5 100%);
  padding: 40rpx 0 80rpx 0;
  box-sizing: border-box;
}

/* 反馈类型选择区域 */
.feedback-type-section {
  width: 90%;
  margin: 0 auto 40rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  position: relative;
  top: -20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.type-options {
  display: flex;
  justify-content: space-between;
}

.type-option {
  flex: 1;
  margin: 0 10rpx;
  padding: 24rpx;
  background-color: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  text-align: center;
}

.type-option:first-child {
  margin-left: 0;
}

.type-option:last-child {
  margin-right: 0;
}

.type-option.selected {
  background-color: #FF6B6B;
  border-color: #FF6B6B;
}

.option-text {
  font-size: 28rpx;
  color: #666;
}

.type-option.selected .option-text {
  color: #fff;
}

/* 地点选择区域 */
.point-selection-section {
  width: 90%;
  margin: 0 auto 40rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  position: relative;
  top: -10rpx;
}

.point-select-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
}

.btn-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  text-align: left;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 反馈内容区域 */
.feedback-content-section {
  width: 90%;
  margin: 0 auto 40rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  position: relative;
  top: -10rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮区域 */
.submit-section {
  width: 90%;
  margin: 0 auto;
  position: relative;
  top: 0rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.3);
}

/* 悬停效果 */
.point-select-btn-hover {
  background-color: #f0f0f0;
}

.submit-btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
} 