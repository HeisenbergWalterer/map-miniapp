/* feedback.wxss */
page {
  width: 100%;
  height: 100vh;
  margin: 0;
  padding: 0;
}

.scrollarea {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, #ff6b6b 0%, #ff8e53 50%, #ffa8a8 100%);
  margin: 0;
  padding: 0;
}

.container {
  width: 100%;
  padding: 40rpx 30rpx 60rpx 30rpx;
  margin: 0;
}

/* 通用样式 */
.section-title {
  margin-bottom: 24rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.required-mark {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-size: 36rpx;
}

/* 反馈类型选择栏 */
.feedback-type-section {
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 0 auto 30rpx auto;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
  position: relative;
  top: 0;
}

.type-options {
  display: flex;
  flex-direction: column;
}

.type-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.type-option:last-child {
  margin-bottom: 0;
}

.type-option.selected {
  background-color: #ffe6e6;
  border: 2rpx solid #ff6b6b;
}

.option-text {
  font-size: 32rpx;
  color: #333;
}

.option-check {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 点位选择区域 */
.point-select-section {
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 0 auto 30rpx auto;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
  position: relative;
  top: -70rpx;
}

.point-select-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.btn-text {
  font-size: 32rpx;
  color: #666;
  flex: 1;
}

.arrow-right {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

.selected-point {
  padding: 20rpx;
  background-color: #e6f3ff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.point-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.point-name {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: 500;
}

/* 反馈内容输入 */
.feedback-content-section {
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 0 auto 40rpx auto;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
  position: relative;
  top: -140rpx;
}

.textarea-wrapper {
  position: relative;
}

.feedback-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  border: none;
  box-sizing: border-box;
  line-height: 1.5;
}

.char-count {
  position: absolute;
  bottom: 12rpx;
  right: 20rpx;
}

.count-text {
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮 */
.submit-section {
  position: relative;
  top: -200rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 36rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.4);
}

.submit-btn-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.6);
}

 