/* favorite.wxss */

/* 页面基础样式 */
page {
  width: 100%;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  background: linear-gradient(to bottom, 
    #FF6B35 0%, 
    rgba(255,107,53,0.85) 300rpx, 
    #f5f5f5 400rpx, 
    #f5f5f5 100%);
}

.page {
  width: 100%;
  min-height: 100vh;
  background: transparent;
  padding: 0;
  margin: 0;
}



/* 收藏内容区域 */
.favorite-content {
  width: 90%;
  margin: 80rpx auto 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  min-height: 800rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background-color: #fff;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  display: block;
}

.empty-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 60rpx;
}

.empty-action {
  margin-top: 40rpx;
}

.browse-btn {
  background: linear-gradient(135deg, #FF6B35 0%, #ff8e53 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
  transition: all 0.2s ease;
}

.browse-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.4);
}

/* 收藏列表样式 */
.favorite-list {
  background-color: #fff;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab-item {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  background-color: transparent;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  margin: 0 10rpx;
}

.tab-item.active {
  background-color: #FF6B35;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #fff;
}

/* 收藏项目列表 */
.favorite-items {
  padding: 20rpx;
  min-height: 400rpx;
}

/* 收藏项目样式 */
.favorite-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.favorite-item:last-child {
  border-bottom: none;
}

.favorite-item:active {
  background-color: #f5f5f5;
}

.favorite-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.favorite-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.favorite-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.favorite-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.favorite-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.favorite-date {
  font-size: 22rpx;
  color: #ccc;
  margin-bottom: 12rpx;
}

.remove-btn {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.remove-btn:active {
  background-color: #e0e0e0;
}

/* 底部提示 */
.bottom-tip {
  text-align: center;
  padding: 40rpx 20rpx;
  background: transparent;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.4;
} 