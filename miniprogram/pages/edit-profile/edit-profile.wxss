page {
  width: 100%;
  height: 100vh;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  background: #3B82F6;
}

.scrollarea {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #2563EB 0%, #2563EB 10%, #3B82F6 40%, #60A5FA 100%);
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.container {
  width: 100%;
  padding: 0 0 180rpx 0;
  margin: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}

/* 导航栏下方过渡效果 */
.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(180deg, rgba(37, 99, 235, 0.8) 0%, rgba(37, 99, 235, 0.4) 50%, transparent 100%);
  pointer-events: none;
  z-index: 1;
}

/* 头像编辑区域 */
.avatar-section {
  background: transparent;
  padding: 120rpx 0 80rpx 0;
  text-align: center;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 2;
}

.avatar-edit-wrapper {
  display: inline-block;
  position: relative;
}

.avatar-edit-btn {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  border: none;
  padding: 0;
  background: none;
  border-radius: 120rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.avatar-container {
  width: 240rpx;
  height: 240rpx;
  border-radius: 120rpx;
  overflow: hidden;
}

.avatar-edit-img {
  width: 100%;
  height: 100%;
}

.avatar-edit-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 70rpx;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-edit-text {
  color: #fff;
  font-size: 26rpx;
}

/* 个人信息编辑列表 */
.info-section {
  background: transparent;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
  position: relative;
  z-index: 2;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
  min-height: 88rpx;
  box-sizing: border-box;
}

.info-item:last-child {
  margin-bottom: 0;
}

/* info-item hover效果 */
.info-item-hover {
  background-color: #f8f9fa !important;
  transform: scale(0.98);
}

.info-label {
  width: 180rpx;
  flex-shrink: 0;
}

.label-text {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.label-required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.info-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 48rpx;
}

.content-text {
  font-size: 32rpx;
  color: #666;
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
  word-break: break-all;
  max-width: 400rpx;
}

.content-placeholder {
  color: #bbb;
}

.arrow-right {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
  flex-shrink: 0;
}

/* 保存按钮 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 255, 255, 0.95) 30%, rgba(255, 255, 255, 0.98) 100%);
  backdrop-filter: blur(10rpx);
  z-index: 100;
  border-top: 1rpx solid rgba(59, 130, 246, 0.1);
}

.save-btn {
  width: 100%;
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
  min-height: 88rpx;
}

.save-btn-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.6);
}

/* 编辑弹窗 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-content {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  background-color: #f5f5f5;
  border-radius: 50%;
}

.modal-body {
  padding: 40rpx;
}

.modal-footer {
  display: flex;
  padding: 32rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer .modal-cancel-btn {
  margin-right: 20rpx;
}

.modal-cancel-btn,
.modal-confirm-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.modal-cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.modal-confirm-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
  color: #fff;
}

/* 昵称输入框 */
.nickname-edit-input {
  width: 100%;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  border: none;
}

/* 性别选择 */
.gender-options {
  display: flex;
  flex-direction: column;
}

.gender-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  margin-bottom: 20rpx;
}

.gender-options .gender-option:last-child {
  margin-bottom: 0;
}

.gender-option.selected {
  background-color: #e6f3ff;
  border: 2rpx solid #3B82F6;
}

.gender-text {
  font-size: 32rpx;
  color: #333;
}

.gender-check {
  font-size: 32rpx;
  color: #3B82F6;
  font-weight: bold;
}

/* 个人简介输入框 */
.desc-edit-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  border: none;
  box-sizing: border-box;
}

/* 手机号输入框 */
.phone-input {
  width: 100%;
  text-align: right;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.phone-input::placeholder {
  color: #bbb;
  font-size: 28rpx;
}

/* 手机号错误提示 */
.phone-error {
  padding: 8rpx 40rpx 0 40rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4757;
  display: inline-block;
}
