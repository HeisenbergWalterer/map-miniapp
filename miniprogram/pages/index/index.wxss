/**index.wxss**/

page {
  background-color: #f8f9fa;
  padding: 0;
  margin: 0;
  /* 设置页面级别的导航栏样式 */
  --navigation-bar-text-style: white;
}

.page {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 头部区域 - 全屏现代蓝色渐变，贴合屏幕顶部 */
.page__header {
  position: relative;
  background: linear-gradient(135deg, #2563EB 0%, #3B82F6 25%, #60A5FA 50%, #3B82F6 75%, #2563EB 100%); 
  /* 现代纯蓝渐变：从深蓝到浅蓝再回到深蓝，减少紫色调 */
  padding: 0;
  margin: 0;
  padding-top: calc(var(--status-bar-height, 44rpx) + 20rpx); /* 适配状态栏高度并增加安全距离 */
  padding-bottom: 120rpx; /* 适度减少底部间距 */
  min-height: 380rpx; /* 增加最小高度以容纳完整图片 */
  overflow: hidden;
}

.page__header::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 240rpx; /* 大幅增加渐变高度，提供更长的过渡 */
  background: linear-gradient(to bottom, 
    rgba(37, 99, 235, 0) 0%,
    rgba(37, 99, 235, 0.05) 10%,
    rgba(37, 99, 235, 0.15) 25%, 
    rgba(37, 99, 235, 0.3) 40%,
    rgba(37, 99, 235, 0.5) 55%,
    rgba(37, 99, 235, 0.7) 70%,
    rgba(37, 99, 235, 0.85) 85%,
    rgba(248, 249, 250, 0.95) 100%
  );
  z-index: 3;
}

.page__header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx; /* 增加最底部的过渡区域高度 */
  background: linear-gradient(to bottom, 
    transparent 0%,
    rgba(248, 249, 250, 0.2) 15%,
    rgba(248, 249, 250, 0.4) 30%,
    rgba(248, 249, 250, 0.6) 45%,
    rgba(248, 249, 250, 0.8) 65%,
    rgba(248, 249, 250, 0.95) 85%,
    #f8f9fa 100%
  );
  z-index: 4;
}

.header-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: white;
  padding: 30rpx 10rpx 0rpx; /* 减少顶部内边距，避免图片被遮挡 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 160rpx;
}

/* 标题卡片样式 - 渐变淡化边缘设计 */
.title-card {
  width: 1000rpx; /* 大幅扩大宽度 */
  height: 410rpx; /* 减少高度，创造更宽的长条形比例 */
  max-width: 98%; /* 增加最大宽度限制以适应更宽的图片 */
  border-radius: 0; /* 移除圆角，改用渐变淡化 */
  border: none; /* 移除边框 */
  overflow: hidden;
  object-fit: cover; /* 强制图片填充容器 */
  position: relative;
  /* 使用多层遮罩创建边缘淡化效果 */
  mask: 
    radial-gradient(ellipse 120% 100% at center, black 40%, transparent 85%),
    linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%),
    linear-gradient(to bottom, transparent 0%, black 5%, black 90%, transparent 100%);
  mask-composite: intersect;
  -webkit-mask: 
    radial-gradient(ellipse 120% 100% at center, black 40%, transparent 85%),
    linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%),
    linear-gradient(to bottom, transparent 0%, black 5%, black 90%, transparent 100%);
  -webkit-mask-composite: source-in;
  /* 柔和的外阴影，增强融合效果 */
  box-shadow: 
    0 8rpx 32rpx rgba(37, 99, 235, 0.18),
    0 4rpx 16rpx rgba(37, 99, 235, 0.12);
}

.app-title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
}

.app-subtitle {
  font-size: 28rpx;
  opacity: 0.95;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 渐变遮罩 - 已由::before和::after伪元素替代，保留此注释作为标记 */
.header-gradient {
  display: none; /* 禁用原来简单的渐变遮罩 */
}

/* 主要内容区域 */
.page__content {
  position: relative;
  margin-top: -80rpx; /* 增加重叠，与更大的渐变效果配合 */
  z-index: 10;
  padding: 0 30rpx 40rpx;
}

/* 欢迎信息窄边框 */
.welcome-bar {
  background: linear-gradient(90deg, #f0f7ff 0%, #ffffff 100%);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  margin-top: 10rpx; /* 增加顶部边距，与渐变效果配合 */
  border-left: 6rpx solid #3B82F6;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.1);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx); /* 添加毛玻璃效果 */
  border: 1rpx solid rgba(255, 255, 255, 0.2); /* 添加微妙边框 */
  display: flex; /* 添加flexbox布局 */
  align-items: center; /* 垂直居中对齐 */
  gap: 15rpx; /* 图标与文字间距 */
  transition: all 0.3s ease; /* 添加过渡动画 */
  cursor: pointer; /* 添加指针样式 */
}

/* 未登录状态的欢迎栏悬停效果 */
.welcome-bar:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(59, 130, 246, 0.15);
}

.welcome-bar::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100%;
  background: linear-gradient(90deg, transparent 0%, rgba(59, 130, 246, 0.05) 100%);
}

.welcome-text {
  font-size: 24rpx; /* 缩小字体，使文字能在一行显示 */
  color: #333;
  line-height: 0; /* 改为正常行高，避免过大的行高导致偏移 */
  position: relative;
  z-index: 2;
  flex: 1; /* 占据剩余空间 */
}

/* 欢迎信息内容容器 */
.welcome-content {
  flex: 1;
  display: flex;
  align-items: center; /* 确保垂直居中 */
  height: 40rpx; /* 与喇叭图标高度一致 */
}

/* 登录高亮样式 */
.login-highlight {
  color: #3B82F6;
  font-weight: bold;
  text-decoration: underline;
}

/* 用户名高亮样式 */
.username-highlight {
  color: #3B82F6;
  font-weight: bold;
  font-size: 26rpx;
}

/* 服务天数高亮样式 */
.days-highlight {
  color: #FF6B35;
  font-weight: bold;
  font-size: 26rpx;
}

/* 扬声器图标样式 */
.speaker-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0; /* 防止图标被压缩 */
  filter: drop-shadow(0 1rpx 2rpx rgba(59, 130, 246, 0.3)); /* 更新为蓝色阴影 */
}

/* 暖心公告区域 */
.notice-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(255, 107, 53, 0.1);
}

.notice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.notice-title {
  font-size: 40rpx; /* 增大字体尺寸 */
  font-weight: bold;
  color: #3B82F6;
  font-family: "PingFang SC", "Helvetica Neue", sans-serif;
  text-shadow: 0 1rpx 2rpx rgba(59, 130, 246, 0.2);
}

.notice-more {
  font-size: 26rpx;
  color: #999;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
}

.notice-content {
  padding: 20rpx 0;
}

.notice-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.notice-text {
  flex: 1;
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  margin-right: 20rpx;
  font-weight: bold; /* 加粗字体 */
  font-family: "SimHei", "Microsoft YaHei", "黑体", sans-serif; /* 黑体字族 */
}

.notice-date {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  white-space: nowrap;
}

/* 服务功能区域 - 整体圆角矩形容器 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3列布局，三个按钮并排 */
  grid-template-rows: repeat(1, 1fr); /* 1行布局 */
  gap: 15rpx; /* 减少间距以适应3列布局 */
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx; /* 调整内边距以适应更紧凑的布局 */
  background: #ffffff; /* 整体容器的白色背景 */
  border-radius: 24rpx; /* 整体容器的圆角 */
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06); /* 整体容器的阴影 */
  border: 1px solid rgba(59, 130, 246, 0.1); /* 更新为蓝色边框 */
  margin: 0 0 110rpx 0; /* 左右边距设为0，与暖心公告对齐 */
}

.function-card {
  background: transparent; /* 移除单个按钮的背景 */
  border-radius: 0; /* 移除单个按钮的圆角 */
  padding: 25rpx 15rpx; /* 减少内边距以适应3列布局 */
  text-align: center;
  box-shadow: none; /* 移除单个按钮的阴影 */
  border: none; /* 移除单个按钮的边框 */
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: visible; /* 允许悬停效果溢出 */
  aspect-ratio: 1; /* 保持正方形比例 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.function-card::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 107, 53, 0.1);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
  z-index: 0;
}

.function-card:active,
.function-card-hover {
  transform: scale(0.95); /* 轻微缩放效果 */
}

.function-card:active::before,
.function-card-hover::before {
  width: 160rpx; /* 调整悬停效果大小，适应放大的图标 */
  height: 160rpx; /* 调整悬停效果大小，适应放大的图标 */
}

.function-icon {
  font-size: 48rpx; /* 减小图标尺寸 */
  margin-bottom: 10rpx; /* 减小间距 */
  display: block;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  position: relative;
  z-index: 1;
}

/* 图片图标样式 */
.function-icon-img {
  width: 130rpx;  /* 放大2倍图标尺寸 */
  height: 130rpx; /* 放大2倍图标尺寸 */
  margin-bottom: 15rpx; /* 增加与文字的间距 */
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  position: relative;
  z-index: 1;
}

.function-name {
  font-size: 28rpx; /* 增大文字尺寸，与放大的图标协调 */
  color: #333;
  font-weight: 500;
  letter-spacing: 1rpx;
  line-height: 1.2; /* 调整行高 */
  position: relative;
  z-index: 1;
  white-space: nowrap; /* 防止文字换行 */
}

/* 底部装饰区域 */
.bottom-decoration {
  text-align: center;
  padding: 40rpx 0;
  position: relative;
}

.decoration-text {
  font-size: 26rpx;
  color: #999;
  position: relative;
  padding: 0 30rpx;
  background: #f8f9fa;
}

.decoration-text::before,
.decoration-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 60rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #ddd 50%, transparent 100%);
}

.decoration-text::before {
  left: -80rpx;
}

.decoration-text::after {
  right: -80rpx;
}

/* 安新联系按钮样式 - 与暖心地图保持一致 */
.contact-card {
  /* 移除特殊样式，与暖心地图按钮保持一致 */
}

/* 响应式优化 */
@media (max-width: 375px) {
  .function-grid {
    gap: 0rpx;
    padding: 25rpx 20rpx; /* 小屏幕下适当减少内边距 */
  }
  
  .function-card {
    padding: 25rpx 15rpx; /* 小屏幕下减少按钮内边距 */
  }
  
  .function-icon-img {
    width: 110rpx; /* 小屏幕下适当减小图标，但保持清晰 */
    height: 110rpx;
  }
  
  .function-name {
    font-size: 24rpx; /* 小屏幕下减小文字 */
  }
}

/* 动画优化 */
.function-card {
  animation: cardSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  opacity: 0;
  transform: translateY(30rpx);
}

/* 删除首页活动预约卡片样式（已不再使用） */

.function-card:nth-child(1) { animation-delay: 0.1s; }
.function-card:nth-child(2) { animation-delay: 0.2s; }
.function-card:nth-child(3) { animation-delay: 0.3s; }
.function-card:nth-child(4) { animation-delay: 0.4s; }
.function-card:nth-child(5) { animation-delay: 0.5s; }
.function-card:nth-child(6) { animation-delay: 0.6s; }

@keyframes cardSlideIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}