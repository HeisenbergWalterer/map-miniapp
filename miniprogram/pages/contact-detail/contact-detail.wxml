<!--contact-detail.wxml-->
<view class="container">
  <!-- 照片展示区域 -->
  <view class="photo-section" wx:if="{{showDetail}}">
    <image src="{{centerInfo.photoUrl || '../../images/default-station-photo.jpg'}}" class="station-photo" mode="aspectFill" bindtap="previewPhoto"></image>
  </view>

  <!-- 详细信息区域 -->
  <view class="detail-section" wx:if="{{showDetail}}">
    <view class="section-title">详细信息</view>
    
    <!-- 基本信息列表 -->
    <view class="info-list">
      <view class="info-item">
        <text class="info-label">服务中心名称</text>
        <text class="info-value">{{centerInfo.name}}</text>
      </view>
      <view class="info-item">
        <text class="info-label">详细地址</text>
        <text class="info-value">{{centerInfo.address}}</text>
      </view>
      <view class="info-item" wx:if="{{centerInfo.serviceTime}}">
        <text class="info-label">服务时间</text>
        <text class="info-value">{{centerInfo.serviceTime}}</text>
      </view>
      <view class="info-item" wx:if="{{centerInfo.phone}}">
        <text class="info-label">联系电话</text>
        <text class="info-value phone-number" bindtap="callPhone">{{centerInfo.phone}}</text>
      </view>
      <view class="info-item" wx:if="{{centerInfo.serviceContent}}">
        <text class="info-label">服务内容</text>
        <text class="info-value">{{centerInfo.serviceContent}}</text>
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-section" wx:if="{{showDetail}}">
    <button class="action-btn call-btn" bindtap="callPhone" wx:if="{{centerInfo.phone}}">
      <image src="../../images/icons/phone.png" class="action-icon" mode="aspectFit"></image>
      <text class="action-text">拨打电话</text>
    </button>
    <button class="nav-button" bindtap="navigateToCenter" wx:if="{{centerInfo.latitude && centerInfo.longitude}}">
      <image src="../../images/icons/navigate.png" class="nav-icon" mode="aspectFit"></image>
      <text class="nav-text">导航到这里</text>
    </button>
  </view>
</view>
