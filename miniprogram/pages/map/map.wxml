<!--map.wxml-->
<view class="search-container">
  <view class="search-input-wrapper">
    <input 
      class="search-input" 
      placeholder="搜索地点" 
      value="{{searchKeyword}}" 
      bind:input="inputSearch"
      bind:focus="onSearchFocus"
      bind:blur="onSearchBlur"
      bind:confirm="searchBySuggestion"
    />
    <button class="search-btn" bindtap="searchBySuggestion">搜索</button>
  </view>
  
  <!-- 搜索建议下拉列表 -->
  <view class="search-suggestions" wx:if="{{showSuggestions && searchSuggestions.length > 0}}">
    <scroll-view scroll-y class="suggestions-scroll">
      <view 
        class="suggestion-item" 
        wx:for="{{searchSuggestions}}" 
        wx:key="id"
        bindtap="selectSuggestion"
        data-suggestion="{{item}}"
      >
        <text class="suggestion-name">{{item.name}}</text>
        <text class="suggestion-address">{{item.district}}{{item.address}}</text>
      </view>
    </scroll-view>
  </view>
</view>
<view class="map_container">
  <map class="map"
      id="map" 
      longitude="{{longitude}}" 
      latitude="{{latitude}}" 
      scale="14" 
      show-location="true" 
      markers="{{markers}}" 
      bindmarkertap="markertap" 
      polyline="{{polyline}}" 
      include-points="{{includePoints}}">
  </map>
  <!-- 定位按钮 -->
  <view class="location-btn" bindtap="getPoiData">
    <image src="../../images/icons/mylocation.png" class="location-icon" mode="aspectFit"></image>
  </view>
</view>
<view class="map_text">
  <!-- 显示选中的位置点信息 -->
  <text class="h1">{{textData.name}}</text>
  <text class="h2">{{textData.desc}}</text>
  <view class="text_box" wx:if="{{daohang}}">
    <view class="text">{{distance}}</view>
  </view>
  <view class="nav" bindtap="startNavigation" wx:if="{{textData.name}}">
    <image src="../../images/icons/navigate.png" class="nav_icon" mode="aspectFit"></image>
  </view>
</view>
