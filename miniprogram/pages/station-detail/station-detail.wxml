<!--station-detail.wxml-->
<view class="container">
  <!-- 顶部导航栏 -->
  <view class="nav-bar">
    <view class="nav-back" bindtap="goBack">
      <image src="../../images/icons/close.png" class="back-icon" mode="aspectFit"></image>
    </view>
    <text class="nav-title">站点详情</text>
  </view>

  <!-- 照片展示区域 -->
  <view class="photo-section" wx:if="{{showDetail}}">
    <image src="{{stationInfo.photoUrl || '../../images/default-station-photo.jpg'}}" class="station-photo" mode="aspectFill" bindtap="previewPhoto"></image>
  </view>

  <!-- 详细信息区域 -->
  <view class="detail-section" wx:if="{{showDetail}}">
    <view class="section-title">详细信息</view>
    
    <!-- 基本信息列表 -->
    <view class="info-list">
      <view class="info-item">
        <text class="info-label">站点名称</text>
        <text class="info-value">{{stationInfo.name}}</text>
      </view>
      <view class="info-item">
        <text class="info-label">详细地址</text>
        <text class="info-value">{{stationInfo.address}}</text>
      </view>
      <view class="info-item">
        <text class="info-label">营业时间</text>
        <text class="info-value">{{stationInfo.serviceTime}}</text>
      </view>
      <view class="info-item">
        <text class="info-label">服务内容</text>
        <text class="info-value">{{stationInfo.serviceContent || '暂无服务内容信息'}}</text>
      </view>
    </view>
  </view>

  <!-- 导航按钮 -->
  <view class="navigation-section" wx:if="{{showDetail}}">
    <button class="nav-button" bindtap="navigateToStation">
      <image src="../../images/icons/navigate.png" class="nav-icon" mode="aspectFit"></image>
      <text class="nav-text">导航到这里</text>
    </button>
  </view>
</view> 