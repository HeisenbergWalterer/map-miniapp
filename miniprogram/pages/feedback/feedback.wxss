/**feedback.wxss**/

/* 页面基础样式 */
page {
  width: 100%;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  background: #FF6B35;
}

.scrollarea {
  width: 100%;
  height: 100vh;
  background: linear-gradient(to bottom, 
    #FF6B35 0%, 
    rgba(255,107,53,0.85) 400rpx, 
    #f5f5f5 470rpx, 
    #f5f5f5 100%);
  margin: 0;
  padding: 0;
  padding-top: 0;
}

.container {
  width: 100%;
  min-height: 100vh;
  background: transparent;
  padding: 0 0 80rpx 0;
  box-sizing: border-box;
}

/* 通用区块样式 */
.feedback-type-section,
.point-selection-section,
.feedback-content-section,
.image-upload-section,
.contact-section {
  width: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx auto;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

/* 反馈类型选择 */
.type-options {
  display: flex;
  justify-content: space-between;
}

.type-option {
  flex: 1;
  margin: 0 10rpx;
  padding: 24rpx;
  background-color: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.2s ease;
}

.type-option:first-child {
  margin-left: 0;
}

.type-option:last-child {
  margin-right: 0;
}

.type-option.selected {
  background-color: #FF6B35;
  border-color: #FF6B35;
}

.option-text {
  font-size: 28rpx;
  color: #666;
}

.type-option.selected .option-text {
  color: #fff;
}

/* 地点选择 */
.point-select-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.btn-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  text-align: left;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 反馈内容区域 */
.feedback-textarea {
  width: 100%;
  min-height: 400rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #f9f9f9;
  line-height: 1.5;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传区域 */
.image-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  background-color: #f5f5f5;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ff4444;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  transition: all 0.2s ease;
}

.add-image-btn:active {
  background-color: #f0f0f0;
  border-color: #999;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 10rpx;
  font-weight: 300;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.image-tip {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

/* 联系方式输入 */
.contact-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  background-color: #f9f9f9;
  margin-bottom: 16rpx;
}

.contact-tip {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

/* 提交按钮区域 */
.submit-section {
  width: 90%;
  margin: 40rpx auto 0;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #FF6B35 0%, #ff8e53 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 53, 0.3);
  transition: all 0.2s ease;
}

.submit-btn.submitting {
  background: #ccc;
  box-shadow: none;
  opacity: 0.7;
}

.submit-btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.point-select-btn-hover {
  background-color: #f0f0f0;
  border-color: #ccc;
}

/* 底部间距 */
.bottom-spacing {
  height: 60rpx;
}

/* 响应式布局调整 */
@media screen and (max-width: 600rpx) {
  .image-item,
  .add-image-btn {
    width: 160rpx;
    height: 160rpx;
  }
  
  .image-container {
    gap: 16rpx;
  }
}
