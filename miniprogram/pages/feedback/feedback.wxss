/**feedback.wxss**/

/* 页面基础样式 */
page {
  width: 100%;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  background: linear-gradient(135deg, #2563EB 0%, #3B82F6 25%, #60A5FA 50%, #3B82F6 75%, #2563EB 100%);
}

.scrollarea {
  width: 100%;
  height: 100vh;
  background: linear-gradient(to bottom, 
    #2563EB 0%, 
    rgba(37, 99, 235, 0.9) 200rpx,
    rgba(59, 130, 246, 0.8) 300rpx,
    rgba(96, 165, 250, 0.6) 400rpx, 
    rgba(248, 249, 250, 0.95) 470rpx, 
    #f8f9fa 100%);
  margin: 0;
  padding: 0;
  padding-top: 0;
}

.container {
  width: 100%;
  min-height: 100vh;
  background: transparent;
  padding: 0 0 80rpx 0;
  box-sizing: border-box;
}

/* 通用区块样式 */
.feedback-type-section,
.point-selection-section,
.feedback-content-section,
.contact-section {
  width: 90%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(59, 130, 246, 0.1);
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 20rpx auto;
  box-shadow: 
    0 8rpx 32rpx rgba(37, 99, 235, 0.12),
    0 4rpx 16rpx rgba(37, 99, 235, 0.08);
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2563EB;
  margin-bottom: 30rpx;
  display: block;
  text-shadow: 0 1rpx 2rpx rgba(37, 99, 235, 0.1);
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #3B82F6 0%, #60A5FA 100%);
  border-radius: 2rpx;
}

/* 反馈类型选择 */
.type-options {
  display: flex;
  justify-content: space-between;
}

.type-option {
  flex: 1;
  margin: 0 10rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.type-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent 0%, rgba(59, 130, 246, 0.1) 50%, transparent 100%);
  transition: left 0.5s ease;
}

.type-option:active::before {
  left: 100%;
}

.type-option:first-child {
  margin-left: 0;
}

.type-option:last-child {
  margin-right: 0;
}

.type-option.selected {
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
  border-color: #3B82F6;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.option-text {
  font-size: 28rpx;
  color: #666;
}

.type-option.selected .option-text {
  color: #fff;
}

/* 地点选择 */
.point-select-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.point-select-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #3B82F6 50%, transparent 100%);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.point-select-btn:active::before {
  transform: scaleX(1);
}

.btn-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  text-align: left;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 反馈内容区域 */
.feedback-textarea {
  width: 100%;
  min-height: 400rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  line-height: 1.5;
  transition: all 0.3s ease;
}

.feedback-textarea:focus {
  border-color: #3B82F6;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
  background: #ffffff;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}



/* 联系方式输入 */
.contact-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.contact-input:focus {
  border-color: #3B82F6;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
  background: #ffffff;
}

.contact-tip {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

/* 提交按钮区域 */
.submit-section {
  width: 90%;
  margin: 40rpx auto 0;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #2563EB 0%, #3B82F6 50%, #60A5FA 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.submit-btn.submitting {
  background: linear-gradient(135deg, #94A3B8 0%, #CBD5E1 100%);
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.2);
  opacity: 0.8;
}

.submit-btn-hover,
.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.point-select-btn-hover,
.point-select-btn:active {
  background: linear-gradient(135deg, #e2e8f0 0%, #f1f5f9 100%);
  border-color: #94a3b8;
  transform: translateY(-1rpx);
}

/* 底部间距 */
.bottom-spacing {
  height: 60rpx;
}


