<view class="page">
  <view wx:if="{{venue}}" class="detail-card">
    <view class="hero {{venue.photoUrl ? 'has-image' : ''}}">
      <image wx:if="{{venue.photoUrl}}" class="hero-image" src="{{venue.photoUrl}}" mode="aspectFill"></image>
      <view class="hero-mask"></view>
      <view class="hero-title">{{venue.title}}</view>
      <view class="hero-sub">欢迎预约</view>
    </view>

    <view class="section">
      <view class="row"><text class="label">地址</text><text class="value">{{venue.place}}</text></view>
      <view class="row"><text class="label">余位</text><text class="value highlight">{{venue.slots}}</text></view>
      <view class="row"><text class="label">电话</text><text class="value">{{venue.contact}}</text></view>
    </view>

    <view class="section">
      <view class="sub-title">选择日期</view>
      <view class="dates">
        <block wx:for="{{dateOptions}}" wx:key="value">
          <view class="date-chip {{selectedDate===item.value?'active':''}}" data-value="{{item.value}}" bindtap="selectDate">{{item.label}}</view>
        </block>
      </view>
    </view>

    <view class="section">
      <view class="sub-title">选择时间段</view>
      <view class="slots">
        <block wx:for="{{timeSlots}}" wx:key="*this">
          <view class="slot {{selectedTimeSlot===item?'active':''}}" data-slot="{{item}}" bindtap="selectTimeSlot">{{item}}</view>
        </block>
      </view>
    </view>

    <button class="primary-btn" bindtap="reserve">预约该场馆</button>
  </view>
</view>


