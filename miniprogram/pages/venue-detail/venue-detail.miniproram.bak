<view class="page">
  <view wx:if="{{venue}}" class="detail-card">
    <view class="hero">
      <view class="hero-mask"></view>
      <view class="hero-title">{{venue.title}}</view>
      <view class="hero-sub">欢迎预约</view>
    </view>

    <view class="section">
      <view class="row"><text class="label">地址</text><text class="value">{{venue.place}}</text></view>
      <view class="row"><text class="label">时段</text><text class="value">{{venue.time}}</text></view>
      <view class="row"><text class="label">联系</text><text class="value highlight">{{venue.slots}}</text></view>
    </view>

    <button class="primary-btn" bindtap="reserve">预约该场馆</button>
  </view>
</view>


