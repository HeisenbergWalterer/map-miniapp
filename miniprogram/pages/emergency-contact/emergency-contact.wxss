/* emergency-contact.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 内容区域 */
.content {
  padding: 30rpx;
  padding-top: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* 紧急联系列表 */
.contacts-container {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-info {
  flex: 1;
}

.contact-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.contact-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.contact-phone {
  display: flex;
  align-items: center;
}

.phone-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.phone-text {
  font-size: 28rpx;
  color: #007aff;
  font-weight: bold;
}

.call-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.call-icon {
  width: 100rpx;
  height: 100rpx;
}

/* 提示信息 */
.tip-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 点击效果 */
.contact-item:active {
  background-color: #f8f9fa;
}

.call-btn:active {
  opacity: 0.7;
}
