/* contact.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 内容区域 */
.content {
  padding: 30rpx;
  padding-top: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* 服务中心列表 */
.centers-list {
  margin-bottom: 40rpx;
}

.center-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  min-height: 180rpx;
}

.card-content {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.center-photo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.photo-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.center-info {
  flex: 1;
  margin-right: 20rpx;
}

.center-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.center-address {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.address-icon {
  font-size: 22rpx;
  margin-right: 6rpx;
}

.address-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}

.center-phone {
  display: flex;
  align-items: center;
}

.phone-icon {
  font-size: 22rpx;
  margin-right: 6rpx;
}

.phone-text {
  font-size: 24rpx;
  color: #007aff;
}

.card-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  font-size: 32rpx;
  color: #ccc;
}

/* 紧急联系区域 */
.emergency-section {
  margin-top: 40rpx;
}

.emergency-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.emergency-content {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.emergency-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.emergency-text {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 点击效果 */
.center-card:active,
.emergency-card:active {
  opacity: 0.7;
  transform: scale(0.98);
}
