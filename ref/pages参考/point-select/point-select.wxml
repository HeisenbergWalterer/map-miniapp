<!--point-select.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 搜索区域 -->
    <view class="search-section">
      <view class="search-box">
        <input class="search-input" placeholder="搜索地点..." value="{{searchKeyword}}" bind:input="onSearchInput" />
        <view class="search-icon">🔍</view>
      </view>
    </view>

    <!-- 地点列表区域 -->
    <view class="point-list-section">
      <view class="category-tabs">
        <view class="tab-item {{selectedCategory === 'all' ? 'active' : ''}}" bindtap="selectCategory" data-category="all">
          <text class="tab-text">全部</text>
        </view>
        <view class="tab-item {{selectedCategory === 'restroom' ? 'active' : ''}}" bindtap="selectCategory" data-category="restroom">
          <text class="tab-text">公共厕所</text>
        </view>
        <view class="tab-item {{selectedCategory === 'service' ? 'active' : ''}}" bindtap="selectCategory" data-category="service">
          <text class="tab-text">暖心服务站</text>
        </view>
        <view class="tab-item {{selectedCategory === 'lounge' ? 'active' : ''}}" bindtap="selectCategory" data-category="lounge">
          <text class="tab-text">司机休息室</text>
        </view>
        <view class="tab-item {{selectedCategory === 'merchant' ? 'active' : ''}}" bindtap="selectCategory" data-category="merchant">
          <text class="tab-text">合作商户</text>
        </view>
      </view>

      <scroll-view class="points-container" scroll-y enhanced show-scrollbar="{{false}}" fast-deceleration="{{true}}" bounces="{{true}}" paging-enabled="{{false}}">
        <view wx:for="{{filteredPoints}}" wx:key="id" class="point-item" bindtap="selectPoint" data-point="{{item.name}}" hover-class="point-item-hover">
          <view class="point-info">
            <text class="point-name">{{item.name}}</text>
            <text class="point-category">{{item.categoryName}}</text>
          </view>
          <view class="point-select">
            <text class="select-text">选择</text>
          </view>
        </view>
        
        <!-- 空状态 -->
        <view wx:if="{{filteredPoints.length === 0}}" class="empty-state">
          <text class="empty-text">暂无匹配的地点</text>
        </view>
      </scroll-view>
    </view>
  </view>
</scroll-view> 