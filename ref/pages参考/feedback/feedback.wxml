<!--feedback.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 反馈类型选择 -->
    <view class="feedback-type-section">
      <text class="section-title">反馈类型</text>
      <view class="type-options">
        <view class="type-option {{feedbackType === 'point' ? 'selected' : ''}}" bindtap="selectFeedbackType" data-type="point">
          <text class="option-text">地点反馈</text>
        </view>
        <view class="type-option {{feedbackType === 'suggestion' ? 'selected' : ''}}" bindtap="selectFeedbackType" data-type="suggestion">
          <text class="option-text">意见建议</text>
        </view>
      </view>
    </view>

    <!-- 地点选择区域 (仅地点反馈显示) -->
    <view wx:if="{{feedbackType === 'point'}}" class="point-selection-section">
      <text class="section-title">选择地点</text>
      <button class="point-select-btn" bindtap="goToPointSelect" hover-class="point-select-btn-hover">
        <text class="btn-text">{{selectedPoint || '点击选择地点'}}</text>
        <text class="arrow">></text>
      </button>
    </view>

    <!-- 反馈内容输入 -->
    <view class="feedback-content-section">
      <text class="section-title">反馈内容</text>
      <textarea 
        class="feedback-textarea" 
        placeholder="请详细描述您的反馈内容..." 
        value="{{feedbackContent}}" 
        bind:input="onContentInput"
        maxlength="500"
        auto-height
        show-confirm-bar="{{false}}">
      </textarea>
      <view class="char-count">{{feedbackContent.length}}/500</view>
    </view>

    <!-- 提交按钮 -->
    <view class="submit-section">
      <button class="submit-btn" bindtap="submitFeedback" hover-class="submit-btn-hover">提交反馈</button>
    </view>
  </view>
</scroll-view> 