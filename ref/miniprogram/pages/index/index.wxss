/* index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

.home-header {
  text-align: center;
  padding: 60rpx 0;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.page-desc {
  display: block;
  font-size: 32rpx;
  color: #666;
}

.home-content {
  margin-top: 40rpx;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  min-height: 400rpx;
}
